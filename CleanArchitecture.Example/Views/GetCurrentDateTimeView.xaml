<Page x:Class="CleanArchitecture.Example.Views.GetCurrentDateTimeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CleanArchitecture.Example.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mvvm="http://prismlibrary.com/"
      Title="GetCurrentDateTimeView"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mvvm:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d">

    <Grid>
        <TextBlock Text="GetCurrentDateTimeView" />
        <Button Command="{Binding GetCurrentDateTimeCommand, Mode=OneWay}" Content="Execute" />
    </Grid>
</Page>
